<% @places.each do |place| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h1><%= place.name %></h1>
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p>
  </div>
<% end %>

<br class="clear-both" />

<div class="text-center">
  <%= will_paginate @places, :previous_label => '&lang;', :next_label => '&rang;' %>
</div>